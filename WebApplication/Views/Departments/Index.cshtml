@model IEnumerable<WebApplication.ViewModel.Department>

@{
    ViewData["Title"] = "Index";
}

<h2>Department List</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-responsive table-bordered">
    <thead class="bg-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    <a asp-action="Edit" class="btn-sm btn-link" asp-route-id="@item.DepartmentId">Edit</a> |
                    <a asp-action="Details" class="btn-sm btn-link" asp-route-id="@item.DepartmentId">Details</a> |
                    <a asp-action="Delete" class="btn-sm btn-link" asp-route-id="@item.DepartmentId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
